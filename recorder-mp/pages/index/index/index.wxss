/* pages/index/index.wxss */
.van-search{
  background-color: #f6f6f6 !important;
}
.van-search__content{
  background-color: #ffffff !important;
  border-radius: 5px;
}
.myCourse{
  margin-bottom: 10rpx;
}
image{
  width: 100rpx;
  height: 100rpx;
  float: left;
  margin: 25rpx;
}
.title{
  line-height: 150rpx;
  display: inline-block;
  font-size: small;
}
.icon{
  line-height: 150rpx;
  float: right;
  margin-right: 25rpx;
}
.title1{
  height: 80rpx;
  display: block;
  line-height: 80rpx;
  margin-left: 25rpx;
  color: rgba(0, 0, 0, 0.534);
  font-size: small;
  font-weight: bold;
}
button{
  width: 200rpx;
  display: inline-block;
  font-size: small;
  text-align: center;
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translate(0,-50%)
}
.van-card{
  margin: 4rpx 30rpx;
  border-radius: 5px;
  background-color: #ffffff !important;
}
.van-card__header{
  height: 150rpx !important;
  margin-bottom: 10rpx;
}
.cardImg{
  width: 130rpx !important;
  height: 130rpx !important;
}
.cardTitle{
  margin-top: 25rpx;
}
.van-card__content{
  height: 100rpx;
}
.recCoures{
  position: relative;
  margin-bottom: 10rpx;
}
.icon1{
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: large;
  color: rgba(0, 0, 0, 0.651);
}