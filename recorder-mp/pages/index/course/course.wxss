/* pages/course/course.wxss */
.course{
  font-size: small;
}
.hr {
  width: 95%;
  height: 1rpx;
  margin: 25rpx auto;
  background-color: #dfdedda9;
}
.top{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-weight: 700;
}
.van-ellipsis{
  background-color: #fafafa;
}
.content, .note{
  height: 100rpx;
  margin: 25rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.048);
}
.icon{
  padding: 0 25rpx;
  font-size: x-large;
}
.into{
  float: right;
  padding-right: 25rpx;
}
.homework{
  height: 140rpx;
  margin: 25rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.048);
}
.hwIcon{
  float: left;
  font-size: x-large;
  padding: 0 35rpx;
  line-height: 110rpx;
}
.hwContent{
  display: inline-block;

}
.hwkName{
  font-weight: 600;
  margin: 10rpx 0;
}
.state1{
  color: rgba(0, 0, 0, 0.432);
}
.state2{
  color: red;
}